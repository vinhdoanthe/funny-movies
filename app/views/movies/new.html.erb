<div class="card">
  <div class="card-header">
    <h3 class="card-title">Share a YouTube video</h3>
  </div>
  <div class="card-body">
    <%= form_with model: @movie do |f| %>
      <div class="mb-3 row">
        <%= f.label "YouTube URL", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :link, class: "form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.submit "Share", class: "form-control btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
