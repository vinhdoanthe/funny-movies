<% if @movies.empty? %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-info">
        <p>There are no movies.</p>
      </div>
    </div>
  </div>
<% else %>
  <% @movies.each do |movie| %>
    <div class="row">
      <%= render movie %>
    </div>
  <% end %>

  <%== pagy_bootstrap_nav(@pagy) %>

<% end %>
